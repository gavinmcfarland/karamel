{% for rule in rules %}
	{% if !rule.modifiers %}
		.{{rule.abbr}} {
			{% for decl in decls %}
				{{decl.name}}: {{decl.value}};
			{% endfor %}
	{% else %}
	{% for modifier in modifiers %}
		.{{rule.abbr}}-{{modifier.name}} {
		{% endif %}
		{% for decl in decls %}
			{{decl.name}}: {{decl.value}};
		{% endfor %}
	}
	.{{rule.abbr}} > * {
		--{{rule.name}}: unset;
	}
	{% endif %}
	{% endfor %}
{% endfor %}
